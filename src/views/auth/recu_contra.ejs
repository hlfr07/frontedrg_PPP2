	<style>
		body {
			background: url(imagenes/Portada.png);
			display: flex;
			justify-content: center;
			align-items: center;
			height: 100vh;
			margin: 0;
		}
		.login-container {
			padding: 2rem;
			border-radius: 10px;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			
		}
		.logo {
			width: 150px;
			margin-bottom: 1rem;
		}
		.form-group {
			margin-bottom: 1.5rem;
		}
		.btn-login {
			display: block;
			width: 100%;
			padding: 0.75rem;
			background: #007bff;
			color: #fff;
			border: none;
			border-radius: 5px;
			text-align: center;
			margin-bottom: 1rem;
			transition: background 0.3s;
		}
		.btn-login:hover {
			background: #0056b3;
		}
		.forgot-password {
			display: block;
			text-align: center;
			color: #007bff;
			text-decoration: none;
